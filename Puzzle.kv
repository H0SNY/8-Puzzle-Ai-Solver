#:kivy 1.0
MainLayout:

<Navbar> :
	orientation : 'horizontal'
	pos_hint : {"top" : 1}
	size_hint : 1 , .1
	spacing : "50dp"
	canvas.before:
		Color :
			rgba : .35 , .35 , .35 , 1
		Rectangle :
			pos : self.pos
			size : self.size 
	Label :
		text : "8 Puzzle AI"
		size_hint : .5 , 1 
		canvas.before : 
			Color : 
				rgba :  .27 , .12 , .81 , 1
			Rectangle : 
				pos : self.pos
				size : self.size
	Button:
		size_hint : .5 , 1 
		text : "8 PUZZLE"
		color : "white"
		on_press : root.on_click()
		canvas.before : 
			Color : 
				rgba :  .20 , .12 , .6 , 1
			Rectangle : 
				pos : self.pos
				size : self.size
		

	



	

